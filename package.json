{
    "name": "easycache",
    "version": "0.0.1",
    "description": "Chrome extension for various web caches/archivers",
    "private": "true",
    "repository": {
	"type": "git",
	"url": "git+https://github.com/gromnitsky/easycache.git"
    },
    "author": "Alexander Gromnitsky",
    "license": "MIT",
    "bugs": {
	"url": "https://github.com/gromnitsky/easycache/issues"
    },
    "homepage": "https://github.com/gromnitsky/easycache#readme",
    "dependencies": {
	"table-dragger": "~1.0.2"
    },
    "eslintConfig": {
	"parserOptions": {
	    "ecmaVersion": 6,
            "sourceType": "module",
	    "ecmaFeatures": {
		"impliedStrict": true
            }
	},
	"env": {
	    "es6": true,
	    "browser": true
	},
	"extends": ["eslint:recommended"],
	"rules": {
	    "no-console": [ "off" ],
	    "no-mixed-spaces-and-tabs": [ "off" ],
	    "no-unused-vars": [ "warn", { "argsIgnorePattern": "^_" } ],

	    "eqeqeq": [ "error" ],
	    "block-scoped-var": [ "warn" ],
	    "default-case": [ "error" ],
	    "dot-notation": [ "error" ],
	    "no-throw-literal": [ "error" ]
	}
    }
}
